# ============================================================
# DoAi Gateway - Development Configuration
# ============================================================
# Configuration for local development and testing.
# Uses mock devices and verbose logging.
#
# Usage: start-gateway.bat development.env
#        .\start-gateway.ps1 -Config development.env
#        ./start-gateway.sh development.env
#
# ============================================================

# -----------------------------------------------------------
# Server Settings
# -----------------------------------------------------------
PORT=3100
NODE_ID=dev-local

# -----------------------------------------------------------
# Laixi Connection (Disabled for development)
# -----------------------------------------------------------
LAIXI_ENABLED=false
LAIXI_URL=ws://127.0.0.1:22221/
LAIXI_TIMEOUT=10000
LAIXI_HEARTBEAT_INTERVAL=5000

# -----------------------------------------------------------
# Cloud Gateway Connection (Disabled for development)
# -----------------------------------------------------------
VULTR_ENABLED=false
VULTR_URL=ws://localhost:8000/ws/node
NODE_SECRET=

# -----------------------------------------------------------
# ADB Settings
# -----------------------------------------------------------
ADB_HOST=127.0.0.1
ADB_PORT=5037

# -----------------------------------------------------------
# Mock Mode (Enabled for development)
# -----------------------------------------------------------
MOCK_DEVICES=true
MOCK_DEVICE_COUNT=5

# -----------------------------------------------------------
# Chrome Automation
# -----------------------------------------------------------
CHROME_ENABLED=false
CHROME_BASE_PORT=9300
CHROME_MAX_CONNECTIONS=10

# -----------------------------------------------------------
# Logging (Verbose for development)
# -----------------------------------------------------------
LOG_LEVEL=debug
