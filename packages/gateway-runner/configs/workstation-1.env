# ============================================================
# DoAi Gateway - Workstation 1 Configuration
# ============================================================
# Configuration for the first workstation deployment.
#
# Usage: start-gateway.bat workstation-1.env
#        .\start-gateway.ps1 -Config workstation-1.env
#        ./start-gateway.sh workstation-1.env
#
# ============================================================

# -----------------------------------------------------------
# Server Settings
# -----------------------------------------------------------
PORT=3100
NODE_ID=workstation-1

# -----------------------------------------------------------
# Laixi Connection
# -----------------------------------------------------------
LAIXI_ENABLED=true
LAIXI_URL=ws://127.0.0.1:22221/
LAIXI_TIMEOUT=10000
LAIXI_HEARTBEAT_INTERVAL=5000

# -----------------------------------------------------------
# Cloud Gateway Connection
# -----------------------------------------------------------
VULTR_ENABLED=true
VULTR_URL=ws://158.247.210.152:8000/ws/node
NODE_SECRET=

# -----------------------------------------------------------
# ADB Settings
# -----------------------------------------------------------
ADB_HOST=127.0.0.1
ADB_PORT=5037

# -----------------------------------------------------------
# Chrome Automation
# -----------------------------------------------------------
CHROME_ENABLED=false
CHROME_BASE_PORT=9300
CHROME_MAX_CONNECTIONS=50

# -----------------------------------------------------------
# Logging
# -----------------------------------------------------------
LOG_LEVEL=info
